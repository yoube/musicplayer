<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_tabhead_style">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tabhost_head_radiobutton_style" parent="main_tabhead_style">
        <item name="android:textSize">14sp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--<style name="app_style" parent="android:Theme.Wallpaper.NoTitleBar">-->
    <style name="app_style" parent="android:Theme.Holo.NoActionBar">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="list_item_title">
        <item name="android:background">@color/list_item_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="activity_actionbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@color/list_item_bg</item>
    </style>

    <style name="activity_actionbar_name">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>